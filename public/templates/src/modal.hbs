<!-- Controls -->
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 id="controls-system-name">{{_ 'Controls' }}</h4>
		</div>
		<div class="modal-body">
			<h3 id="tabs">{{_ 'Manage Controls' }}</h3>
			{{#items}}
			<h4>Using the <span class="text-info">STANDARD</span> layout on a <span class="text-primary">{{name}}</span> keyboard</h4>
			<div id="osk">
				{{#keysets}}
				<div class="btn-toolbar" role="toolbar">
					<div class="btn-group btn-group-justified">
						{{#keys}}
						<div class="btn-group">
							<button type="button"
									class="btn {{visual.button.class}}"
									data-placement="bottom"
									data-trigger="hover"
									data-toggle="popover"
									title="Key description"
									data-content="{{visual.legend.text}}">
								<span class="fa {{visual.legend.icon}}"></span>
								<span>{{functional.content}}</span>
							</button>
						</div>
						{{/keys}}
					</div>
				</div>
				{{/keysets}}
			</div>
			{{/items}}
			<br />
			<ul class="nav nav-tabs">
				<li>
					<a data-toggle="tab" href="#screens"><i class="icon-tablet"></i>{{_ 'Screens' }}</a>
				</li>
				<li>
					<a data-toggle="tab" href="#player"><i class="icon-male"></i>{{_ 'Player' }}</a>
				</li>
				<li>
					<a data-toggle="tab" href="#weapons"><i class="icon-rocket"></i>{{_ 'Weapons' }}</a>
				</li>
			</ul>
			<div class="tabbable">
				<div class="tab-content">
					<div id="screens" class="tab-pane">
						<p>
							<ul style="list-style: none;">
								<li>
									<i class="icon-keyboard"></i> <b class="text-danger">{{_ 'Press' }}</b>
									<b class="text-primary">{{screens.toggle_points}}</b> <em>{{_ 'to toggle points' }}</em>
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-warning">{{_ 'Press' }}</b>
									<b class="text-primary">{{screens.toggle_profile}}</b> <em>{{_ 'to toggle profile' }}</em>
								</li>
							</ul>
						</p>
					</div>
					<div id="player" class="tab-pane active">
						<p>
							<ul style="list-style: none;">
								<li>
									<i class="icon-keyboard"></i> <b class="text-warning">{{_ 'Hold' }}</b>
									<b class="text-primary">{{player.move_up}}</b> <em>{{_ 'to move up' }}</em>
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-warning">{{_ 'Hold' }}</b>
									<b class="text-primary">{{player.move_left}}</b> <em>{{_ 'to move left' }}</em>
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-warning">{{_ 'Hold' }} </b>
									<b class="text-primary">{{player.move_down}}</b> <em>{{_ 'to move down' }}</em>
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-warning">{{_ 'Hold' }} </b>
									<b class="text-primary">{{player.move_right}}</b> <em>{{_ 'to move right' }}</em>
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-danger">{{_ 'Press' }} </b>
									<b class="text-primary">{{player.pickup}}</b> <em>{{_ 'to pickup an item' }}</em>
								</li>
							</ul>
						</p>
					</div>
					<div id="weapons" class="tab-pane">
						<p>
							<ul style="list-style: none;">
								<li>
									<i class="icon-laptop"></i>
									<b class="text-primary">{{weapons.operate}}</b> <em>{{_ 'mouse' }}</em>
									<b>{{_ 'OR' }}</b>
									<br />
									<i class="icon-keyboard"></i>
									<b class="text-danger">{{_ 'Press' }}</b>
									<b class="text-primary">{{weapons.operate_alt}}</b> <em>{{_ 'to shoot' }}</em>
									<hr />
								</li>
								<li>
									<i class="icon-laptop"></i>
									<b class="text-primary">{{weapons.push}}</b> <em>{{_ 'mouse' }}</em>
									<b>{{_ 'OR' }}</b>
									<br />
									<i class="icon-keyboard"></i>
									<b class="text-danger">{{_ 'Press' }}</b>
									<b class="text-primary">{{weapons.push_alt}}</b> <em>{{_ 'to punch' }}</em>
									<hr />
								</li>
							</ul>
						</p>
						<p>
							<ul style="list-style: none;">
								<li>
									<i class="icon-keyboard"></i> <b class="text-danger">{{_ 'Press' }}</b>
									<b class="text-primary">{{weapons.throw_away_mag}}</b> <em>{{_ 'to throw away mag' }}</em>
									<img src="multimedia/default-contentpack/images/controls/PS3/faceButton0.png" />
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-danger">{{_ 'Press' }}</b>
									<b class="text-primary">{{weapons.enter_new_mag}}</b> <em>{{_ 'to enter new mag' }}</em>
									<img src="multimedia/default-contentpack/images/controls/PS3/faceButton1.png" />
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-danger">{{_ 'Press' }}</b>
									<b class="text-primary">{{weapons.reconnect_new_mag}}</b> <em>{{_ 'to reconnect new mag' }}</em>
									<img src="multimedia/default-contentpack/images/controls/PS3/faceButton2.png" />
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-danger">{{_ 'Press' }}</b>
									<b class="text-primary">{{weapons.chamber}}</b> <em>{{_ 'to chamber' }}</em>
									<img src="multimedia/default-contentpack/images/controls/PS3/faceButton3.png" />
								</li>
							</ul>
						</p>
					</div>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">{{_ 'Close' }}</button>
		</div>
	</div>
</div>